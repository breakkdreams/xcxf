navigator {
  display: inline;
}

.list {
  background-color: white;
}

.list .list_item {
  padding: 10px;
  height: 100px;
}

.list .list_item .img {
  float: left;
  width: 25%;
  height: 100%;
}

.list .list_item .img image {
  width: 100%;
  height: 100%;
}

.list .list_item .info {
  width: 75%;
  float: right;
  height: 100px;
  position: relative;
}

.list .list_item .info .title {
  color: #333;
  margin-left: 10px;
  font-size: 15px;
}

.list .list_item .info .price {
  margin-left: 10px;
  margin-top: 10px;
  font-size: 15px;
}

.list .list_item .info .num {
  position: absolute;
  left: 0px;
  bottom: 20px;
  color: #747474;
  margin-left: 10px;
  font-size: 15px;
}
.goodsImage {
  width: 95%;
  height: 200px;
}
.goodsContent {
  text-align: left;
  margin-left: 10px;
}
.oldPrice{
  text-decoration:line-through;
}